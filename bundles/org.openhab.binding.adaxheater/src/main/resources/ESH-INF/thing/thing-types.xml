<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="adaxheater"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<bridge-type id="account">
		<label>ADAX account</label>
		<description>Account from which Rooms are being fetched.</description>

		<config-description>
			<parameter name="username" type="text" required="true" groupName="credentials">
				<label>API Username</label>
				<description>Username for Remote user clent API. Found in Adax Wifi app.</description>
			</parameter>

			<parameter name="password" type="text" required="true" groupName="credentials">
				<label>API Password</label>
				<description>Password for Remote user clent API. Found in Adax Wifi app.</description>
			</parameter>

		</config-description>
	</bridge-type>

	<thing-type id="room">
		<supported-bridge-type-refs>
			<bridge-type-ref id="account"/>
		</supported-bridge-type-refs>

		<label>Room</label>
		<description>A Room containing heaters.</description>

		<channels>
			<channel id="roomTargetTemperature" typeId="roomTargetTemperature"/>
			<channel id="roomCurrentTemperature" typeId="currentTemperature">
				<label>Current temperature</label>
				<description>The current temperature of the Room</description>
			</channel>
			<channel id="roomHeatingEnabled" typeId="roomHeatingEnabled"/>
		</channels>

		<config-description>
			<parameter name="roomName" type="text" required="true">
				<label>Room name</label>
				<description>The name of the room</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="roomTargetTemperature">
		<item-type>Number</item-type>
		<label>Target temperature</label>
		<description>The target temperature of the room</description>
	</channel-type>

	<channel-type id="currentTemperature">
		<item-type>Number</item-type>
		<label>Current temperature</label>
		<description>The current temperature of the room</description>
		<state pattern="%.1f Â°C" readOnly="true"/>
	</channel-type>

	<channel-type id="roomHeatingEnabled">
		<item-type>Switch</item-type>
		<label>Heating enabled</label>
		<description>Is heating enabled</description>
	</channel-type>

</thing:thing-descriptions>
